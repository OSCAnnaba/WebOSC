// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Organization {
  org_id        String         @id
  nameEn        String
  nameAr        String
  parent_org    Organization?  @relation("orgs", fields: [parent_org_id], references: [org_id])
  parent_org_id String?
  sub_orgs      Organization[] @relation("orgs")
  editors       Editor[]
  announcements Announcement[]
}

model User {
  user_id    String   @id @default(uuid())
  name       String
  middlename String?
  lastname   String
  isMale     Boolean?
  email      String   @unique
  password   String
  super      Boolean  @default(false)
  editors    Editor[]
}

model Editor {
  editor_id     String         @id @default(uuid())
  user          User           @relation(fields: [user_id], references: [user_id])
  user_id       String
  org           Organization   @relation(fields: [org_id], references: [org_id])
  org_id        String
  announcements Announcement[]

  @@unique([user_id, org_id])
}

model Announcement {
  announcement_id Int          @id @default(autoincrement())
  title           String
  body            String
  editor          Editor       @relation(fields: [editor_id], references: [editor_id])
  editor_id       String
  org             Organization @relation(fields: [org_id], references: [org_id])
  org_id          String
}
