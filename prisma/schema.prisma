// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Organization {
  id            String         @id
  nameEn        String
  nameAr        String
  parent_org    Organization?  @relation("orgs", fields: [parent_org_id], references: [id])
  parent_org_id String?
  sub_orgs      Organization[] @relation("orgs")
  editors       Editor[]
}

model User {
  user_id  String   @id @default(uuid())
  name     String
  lastname String
  isMale   Boolean?
  email    String   @unique
  password String
  editors  Editor[]
}

model Editor {
  editor_id    String         @id @default(uuid())
  user         User           @relation(fields: [user_id], references: [user_id])
  user_id      String
  org          Organization   @relation(fields: [org_id], references: [id])
  org_id       String
  Announcement Announcement[]

  @@unique([user_id, org_id])
}

model Announcement {
  announcement_id Int    @id @default(autoincrement())
  title           String
  body            String
  editor          Editor @relation(fields: [editor_id], references: [editor_id])
  editor_id       String
}
